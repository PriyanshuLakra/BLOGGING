// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Blog {
  id                   Int       @id @default(autoincrement())
  title                String
  mainImage            Json // URL or path to the main image
  intro                String
  mainContent          String
  paraOneImage         Json?
  paraOneDescription   String?
  paraOneTitle         String?
  paraTwoImage         Json?
  paraTwoDescription   String?
  paraTwoTitle         String?
  paraThreeImage       Json?
  paraThreeDescription String?
  paraThreeTitle       String?
  category             Category // Enum for blog category
  createdBy            User      @relation(fields: [createdById], references: [id])
  createdById          Int
  authorName           String? // Name of the blog's author
  authorAvatar         Json? // Avatar of the blog's author
  createdOn            DateTime? @default(now())

  @@map("blogs") // Table name in the database
}

enum Category {
  TECHNOLOGY
  LIFESTYLE
  EDUCATION
  ENTERTAINMENT
  HEALTH
  OTHER
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String   @unique
  email     String   @unique
  avatar    Json?
  education String?
  role      Role     @default(READER)
  password  String
  createdOn DateTime @default(now())

  blogs Blog[] // Relation: A user can create many blogs

  @@map("users") // Table name in the database
}

enum Role {
  READER
  AUTHOR
}
